# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Shortcuts
alias g="git"
alias h="history"
alias l="ls -l"
alias la="ls -la"
alias lsd='ls -l | grep "^d"'
alias cl="clear"

# ifood shortcuts
alias ifood="cd ~/Documentos/projects/ifood"