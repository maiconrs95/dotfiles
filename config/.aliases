# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Shortcuts
alias g="git"
alias h="history"
alias l="ls -l"
alias la="ls -la"
alias lsd='ls -l | grep "^d"'
alias cl="clear"
alias document="cd ~/Documentos"
alias projects="cd ~/Documentos/projects"
alias clearbranches='git branch | grep -v "main | master" | xargs git branch -D'

# ifood shortcuts
alias ifood="cd ~/Documentos/projects/ifood"

alias cleanProjectCache='rm -rf node_modules && npm cache clean --force && npm i';